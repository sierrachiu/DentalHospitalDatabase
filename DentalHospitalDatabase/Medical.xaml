<Window x:Class="DentalHospitalDatabase.Medical"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalHospitalDatabase"
        mc:Ignorable="d"
        Title="Medical" Height="450" Width="800">
    <Grid Background="#FF53BDF0">
        <Button x:Name="btnReturn" Content="Return" HorizontalAlignment="Left" Margin="75,100,0,0" VerticalAlignment="Top" Width="200" Height="250" FontSize="20" FontWeight="Bold" Click="btnReturn_Click"/>
        <Label x:Name="lblMedical" Content="Medical" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>
        <Button x:Name="btnNewAppt" Content="New Appointment" HorizontalAlignment="Left" Margin="300,100,0,0" VerticalAlignment="Top" Width="200" FontSize="20" Height="250" FontWeight="Bold" Click="btnNewAppt_Click"/>
        <Button x:Name="btnPayment" Content="Payment" HorizontalAlignment="Left" Margin="525,100,0,0" VerticalAlignment="Top" Width="200" Height="250" FontSize="20" FontWeight="Bold" Click="btnPayment_Click"/>

    </Grid>
</Window>
