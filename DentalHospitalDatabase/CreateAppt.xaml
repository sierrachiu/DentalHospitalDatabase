        <Button x:Name="btnPayment" Content="Payment" HorizontalAlignment="Right" Margin="0,359,10,0" VerticalAlignment="Top" Width="184" FontSize="20
                " FontWeight="Bold" Height="50" Click="btnPayment_Click"/>

    </Grid>
</Window>
