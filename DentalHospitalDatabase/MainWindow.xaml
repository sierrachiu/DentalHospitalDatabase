<Window x:Class="DentalHospitalDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalHospitalDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF53BDF0">
        <Button x:Name="btnDentalCheck" Content="Dental Check-In" HorizontalAlignment="Left" Margin="75,100,0,0" VerticalAlignment="Top" Width="300" Height="250" FontSize="20" FontWeight="Bold" Click="btnDentalCheck_Click"/>
        <Button x:Name="btnMedicalCheck" Content="Medical Check-in" HorizontalAlignment="Left" Margin="425,100,0,0" VerticalAlignment="Top" Width="300" Height="250" FontSize="20" FontWeight="Bold" Click="btnMedicalCheck_Click" Background="#FFDDDDDD"/>
        <Label x:Name="lblWelcome" Content="Welcome To The Hospital of Health" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>

    </Grid>
</Window>
